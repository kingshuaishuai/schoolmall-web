@import '../common/variables'
.order-list-table
  width: 100%
  border-collapse: collapse
  background: #fafafa
  margin-bottom: 20px
  &.header
    background: #eee
  .cell
    padding: 10px 0
    color: #666
    border-bottom: 1px solid #eee
  .order-info
    background: #eee
    padding: 10px
    .order-text
      margin-right: 25px
    .order-num
      font-weight: bold
    .order-total
      font-weight: bold
      color: themeDeepColor
    .order-detail
      float: right
  .cell-img
    width: 10%
    text-align: center
    padding: 10px
    .p-img
      width: 80px
      height: 80px
      // border: 1px solid #ddd
  .cell-info
    width: 45%
    text-align: left
  .cell-price
    width: 15%
    text-align: center
  .cell-count
    width: 15%
    text-align: center
  .cell-total
    width: 15%
    text-align: center
// 订单提交
.submit-con
  background: #eee
  text-align: right
  .submit-total
    margin-right: 20px
    font-size: 18px
    color: themeDeepColor
    font-weight: bold
    vertical-align: middle
  .order-submit
    height: 50px
    line-height: 50px
    width: 100px
    text-align: center
      
    