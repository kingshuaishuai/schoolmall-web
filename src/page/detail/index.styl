@import '../common/variables'
// 图片区
.intro-wrap
  overflow: hidden
  margin-top: 20px
  .p-img-con
    float: left
    width: 420px
    // 主图
    .main-img-con
      width: 100%
      height: 420px
      background: #fff
      .main-img
        width: 100%
        height: 100%
    // 缩略图
    .p-img-list
      overflow: hidden
      margin-top: 5px
      margin-right: -10px
      height: 78px
      .p-img-item
        width: 72px
        height: 72px
        border: 2px solid #eee
        cursor: pointer
        float: left
        margin-right: 10px
        &:hover
          border: 2px solid themeDeepColor
        .p-img
          width: 100%
          height: 100%
  .p-info-con
    float: left
    width: 640px
    margin-left: 20px
    .p-name
      font-size: 20px
      color: #333
      margin-bottom: 20px
    .p-subtitle
      font-size: 15px
      color: themeDeepColor
      line-height: 30px
    .p-info-item
      position: relative
      padding: 0 10px
      margin-top: 20px
      .label
        display: inline-block
        width: 50px
        color: #999
    // 价格
    .p-price-con
      background: #eee
      padding: 10px
      .info
        color: themeDeepColor
        font-size: 18px
    // 数量
    .p-count-con
      .p-count
        height: 36px
        line-height: 36px
        font-size: 15px
        text-align: center
        outline: none
        border: 1px solid #aaa
        width: 45px
      .p-count-btn
        position: absolute
        left: 115px
        width: 20px
        height: 15px
        line-height: 15px
        text-align: center
        font-size: 10px
        border: 1px solid #aaa
        background: #fff
        cursor: pointer
        user-select: none
        &.plus
          top: 0
        &.minus
          bottom: 0
    .cart-add
      margin-top: 20px

.detail-wrap
  margin-top: 20px
  .tab-list
    background: #fff
    overflow: hidden
    border-bottom: 2px solid themeDeepColor
    .tab-item
      width: 120px
      height: 50px
      line-height: 50px
      font-size: 16px
      text-align: center
      cursor: pointer
      user-select: none
      float: left
      &.active
        background: themeDeepColor
        color: #fff
  .detail-con
    padding-top: 20px
    text-align: center
    line-height: 36px
    img
      display: block
      margin: 0 auto
.err-tip
  padding: 0 10px
  height: 60px
  line-height: 60px
  color: themeDeepColor
  text-align: center
  font-weight: bold
  background: #fff
  margin: 20px 0
  font-size: 14px






