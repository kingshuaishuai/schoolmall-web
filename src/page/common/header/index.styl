@import "../variables"
inputFontSize = 15px
// 通用头部导航
.header
  .logo
    position: absolute
    left: 0
    top: 0
    line-height: 114px
    display: block
    font-size: 36px
    font-weight: bold
    color: themeColor
  .search-con
    padding: 40px 0 30px 250px
    .search-input
      width: 550px
      height: 40px
      padding-left: 10px
      font-size: inputFontSize
      border: 2px solid themeColor
      vertical-align: middle
      outline: none
    .search-btn
      height: 44px
      width: 80px
      