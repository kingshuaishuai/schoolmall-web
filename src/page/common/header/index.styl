@import "../variables"
crumbBgColor = #eee
crumbColor = #888
inputFontSize = 15px
// 通用头部导航
.header
  .logo
    position: absolute
    left: 0
    top: 0
    line-height: 114px
    display: block
    font-size: 36px
    font-weight: bold
    color: themeColor
    text-decoration: none
  .search-con
    padding: 40px 0 30px 250px
    .search-input
      width: 550px
      height: 40px
      padding-left: 10px
      font-size: inputFontSize
      border: 2px solid themeColor
      vertical-align: middle
      outline: none
    .search-btn
      height: 44px
      width: 80px
// 面包屑导航
.crumb
  height: 50px
  line-height: 50px
  background-color: crumbBgColor
  color: crumbColor
  font-size: 14px
  border-top: 2px solid themeColor


















