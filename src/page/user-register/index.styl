containerBgColor = #e72955
loginBgColor = #fff
userTitleFontSize = 18px
userTitleColor = #666
errorColor = red
errorBoxBgColor = #fde9e9
errorBoxFontSize = 14px
negHalfErrorFontSize = -7px
userItemIconColor = #d3d3d3
userItemHeight = 18px
iconSize = 18px
.page-wrap
  background: containerBgColor
  padding: 40px 0
  .user-con
    width: 400px
    background: loginBgColor
    margin: 0 auto
    position: relative
    .user-title
      text-align: center
      padding: 10px 0
      border-bottom: 1px solid #ddd
      font-size: userTitleFontSize
      font-weight: bold
      color: userTitleColor
    .user-box
      padding: 20px
      //错误提示
      .error-item
        position: relative
        padding: 4px 0 4px 40px
        margin-bottom: 10px
        border: 1px solid errorColor
        color: errorColor
        background: errorBoxBgColor
        display: none
        // 错误图标
        .error-icon
          position: absolute
          left: 14px
          top: 50%
          margin-top: negHalfErrorFontSize
          font-size: errorBoxFontSize
      .user-item
        position: relative
        margin-bottom: 20px
        .user-label
          position: absolute
          left: 0
          top: 0
          bottom: 0
          width: 40px
          line-height: 38px
          background: #f3f3f3
          font-size: iconSize
          color: userItemIconColor
          text-align: center
          border: 1px solid #bdbdbd
        .user-content
          padding: 10px 0 10px 50px
          width: 308px
          height: userItemHeight
          line-height: userItemHeight
          font-size: 15px
          border: 1px solid #bdbdbd
          outline: none
      .btn-submit
        width: 100%
        padding: 3px 0
        text-align: center
        font-size: 20px
      .link-item
        text-align: right
        margin-top: 10px
        .link
          color: #999
          &:hover
            color: #e80012
        







        









